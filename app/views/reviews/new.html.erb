<h1>Create a review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
  <%= f.submit 'Add review' %>
<% end %>

<button> <%= link_to 'Back to restaurant', restaurant_path(@restaurant) %> </button>
